{
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "commonjs": true
    },
    "globals": {
        "process": true
    },
    "rules": {
        "quotes": [
            "warn",
            "single"
        ],
        "semi": [
            "warn",
            "always"
        ],
        "no-unused-vars": "warn",
        "comma-dangle": [
            "warn",
            "always"
        ],
        "require-atomic-updates": "off"
    }
}